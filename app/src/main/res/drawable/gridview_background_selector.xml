<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<stroke android:color="@color/line" android:width="1.0px"/>
			<gradient android:startColor="#ffe8ecef" android:endColor="#ffe8ecef" android:angle="270.0"/>
		</shape>
	</item>

	<item android:state_focused="true">
		<shape android:shape="rectangle">
			<gradient android:startColor="#ffe8ecef" android:endColor="#ffe8ecef" android:angle="270.0"/>
			<stroke android:color="@color/line" android:width="1.0px"/>
		</shape>		
	</item>

	<item>
		<shape android:shape="rectangle">
			<gradient android:startColor="#ffffffff" android:endColor="#ffffffff" android:angle="270.0"/>
			<stroke android:color="@color/line" android:width="1.0px"/>
		</shape>
	</item>

</selector>
